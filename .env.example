# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# IMPORTANT: Set this webhook secret for security (required for production)
# Generate a random string (32+ characters recommended)
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

TELEGRAM_WEBHOOK_BASE_URL=https://your-domain.com

# Convex Database Configuration
# Get these from your Convex dashboard at https://dashboard.convex.dev
CONVEX_URL=https://your-convex-deployment.convex.cloud
CONVEX_ADMIN_KEY=your_convex_admin_key_here

# Azure OpenAI Configuration
# Get these from your Azure OpenAI resource in the Azure portal
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Optional: Azure OpenAI Vision deployment for image analysis
# Use this for GPT-4 Vision or similar vision-capable models
AZURE_OPENAI_VISION_DEPLOYMENT_NAME=gpt-4-vision

# Optional: Azure Computer Vision for image analysis (fallback)
# Get these from your Azure Computer Vision resource
AZURE_VISION_ENDPOINT=https://your-vision-resource.cognitiveservices.azure.com/
AZURE_VISION_KEY=your_azure_vision_key_here

# Optional: Content Analysis APIs
# For enhanced web scraping and content extraction
MERCURY_API_KEY=your_mercury_api_key_here
READABILITY_API_KEY=your_readability_api_key_here

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# Docker Configuration (for production deployment)
NGINX_PORT=80
NGINX_SSL_PORT=443
DOMAIN=buddian.com

# Plugin Configuration
PLUGINS_ENABLED=true
PLUGIN_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Memory and Performance
MAX_CONVERSATION_HISTORY=1000
CACHE_TTL=3600
